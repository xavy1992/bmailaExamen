<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bmailaExamen.Resumen">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            
            <Label Text="VENTANA DE REGISTRO" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="lblUsuario" HorizontalTextAlignment="End" FontSize="16"/>
            <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Nombre" Grid.Row="0" Grid.Column="0"/>
                    <Entry x:Name="txtNombre"  Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Total" Grid.Row="1" Grid.Column="0"/>
                    <Entry x:Name="txtTotal"  Keyboard="Numeric" Grid.Row="1" Grid.Column="1"/>

                </Grid>

                <Button x:Name="btnAcercade" Text="Acerca de" Clicked="btnAcercade_Clicked"/>

            </StackLayout>
       </ScrollView>
    </ContentPage.Content>
</ContentPage>